@model IEnumerable<VeterinaryClinic.Entities.Entities.Rol>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameRol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameRol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRol" class=" btn btn-info" >Editar Rol</a> |
                <a asp-action="Details" asp-route-id="@item.IdRol" class="btn btn-dark" >Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRol" class="btn btn-danger" >Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
